#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running minimal pre-commit checks..."

# Optional basic formatting (non-blocking)
echo "🎨 Running optional Prettier formatting..."
npx prettier --write "src/**/*.{js,jsx,ts,tsx,json,md}" 2>/dev/null || {
  echo "⚠️ Prettier formatting skipped, continuing..."
}

# Add any auto-formatted files back to the commit
git add -A 2>/dev/null || true

echo "✅ Pre-commit checks completed successfully!"