{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "ES6", "ES2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitReturns": false,
    "noImplicitThis": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts",
    "next-auth/next"
  ],
  "exclude": [
    "node_modules",
    "scripts/**/*",
    "src/app/api/stripe/webhook/route.ts",
    "src/components/ai/VoiceInterface.tsx"
  ]
}
